{
  "manifest_version": 3,
  "name": "Jibaro Rich Text Converter",
  "version": "3.0.2",
  "description": "Convert Markdown to rich HTML - paste into Word/Outlook with beautiful formatting",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Jibaro Rich Text Converter"
  },
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "storage",
    "contextMenus",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  }
}
